<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AIAdvisor" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/background_secondary</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:statusBarColor">@color/background_primary</item>
        <item name="android:navigationBarColor">@color/background_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="materialButtonStyle">@style/FlatButtonStyle</item>
        <item name="materialCardViewStyle">@style/FlatCardStyle</item>
    </style>

    <style name="Theme.AIAdvisor" parent="Base.Theme.AIAdvisor" />
    
    <!-- Glass Card Style -->
    <style name="GlassCardStyle">
        <item name="android:background">@drawable/glass_background</item>
        <item name="android:elevation">8dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/glass_primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/glass_secondary</item>
    </style>
    
    <!-- Glass Button Style -->
    <style name="GlassButtonStyle" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/glass_button_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <!-- Text Styles -->
    <style name="HeadlineText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="BodyText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="CaptionText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Flat Button Style -->
    <style name="FlatButtonStyle" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Flat Card Style -->
    <style name="FlatCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/background_secondary</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/glass_secondary</item>
    </style>

    <!-- Income/Positive Button Style -->
    <style name="PositiveButtonStyle" parent="FlatButtonStyle">
        <item name="android:backgroundTint">@color/income_green</item>
    </style>

    <!-- Outcome/Negative Button Style -->
    <style name="NegativeButtonStyle" parent="FlatButtonStyle">
        <item name="android:backgroundTint">@color/outcome_red</item>
    </style>

    <style name="Theme.AiAdvisor" parent="Base.Theme.AiAdvisor" />
</resources>
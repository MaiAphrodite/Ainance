<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true">

    <!-- Settings FAB with Label -->
    <LinearLayout
        android:id="@+id/fab_settings_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fab_add_transaction_layout"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:background="@drawable/glass_background"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginEnd="16dp"
            android:elevation="6dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings"
            android:backgroundTint="@color/secondary"
            android:tint="@color/white"
            app:fabSize="mini"
            android:elevation="6dp" />

    </LinearLayout>

    <!-- Add Transaction FAB with Label -->
    <LinearLayout
        android:id="@+id/fab_add_transaction_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fab_main"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Transaction"
            android:background="@drawable/glass_background"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginEnd="16dp"
            android:elevation="6dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            android:backgroundTint="@color/primary"
            android:tint="@color/white"
            app:fabSize="mini"
            android:elevation="6dp" />

    </LinearLayout>

    <!-- Main FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_add"
        android:backgroundTint="@color/primary"
        android:tint="@color/white"
        android:elevation="6dp"
        app:fabSize="normal" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_secondary"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_goal_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Monthly Savings Goal"
            style="@style/BodyText"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="65.5%"
            style="@style/BodyText"
            android:textColor="@color/primary" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goal_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 1.500.000 / Rp. 2.000.000"
                style="@style/CaptionText" />

            <TextView
                android:id="@+id/tv_goal_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Target: Dec 31, 2024"
                style="@style/CaptionText"
                android:textColor="@color/text_tertiary" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_pay_goal"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Pay"
            android:textSize="12sp"
            android:paddingHorizontal="12dp"
            style="@style/FlatButtonStyle" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        android:max="100"
        android:progress="65"
        android:progressDrawable="@drawable/progress_bar_goal" />

</LinearLayout>
